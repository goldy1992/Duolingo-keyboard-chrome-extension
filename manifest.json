{
  "name": "Mike's Ukranian Extension",
  "manifest_version": 2,
	"version": "1.0",
  "description": "Converts Keyboard into Ukranian for Ukranian questions",
  "icons": { 	"128": "ukr128.png",
							"19": "ukr19.png",
							"38": "ukr38.png" },
 
  "background": {
		"scripts": ["backgroundForPageAction.js"],
    "persistent": false
  },
	
  "permissions": [
		"activeTab",
		"*://www.duolingo.com/*", 
		    "declarativeContent"],
		
		
  "author": "Michael Goldsmith",
		
  "page_action": {
    "default_title": "Ukranian Duolingo Extension",
    "default_icon": {"38": "ukr38.png"},
		"default_popup": "popup.html"
  },
	
	"content_scripts": [
    {
      "matches": [		"*://www.duolingo.com/*"],
      "js": ["jquery-2.1.4.min.js", "jquery.caret.js", "keyMap.js", "runScript.js"]
    }
  ]
}